{
    "manifest_version": 2,
    "name": "BrainCache",
    "description": "BrainCache is a simple to use Chrome-based tab manager (https://github.com/johns1342/brain-cache).",
    "version": "0.4.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": ["storage", "tabs", "chrome://favicon/"],
    "icons": {
        "16": "images/braincache16.png"
    }
}
