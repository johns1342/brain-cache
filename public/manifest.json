{
    "name": "BrainCache",
    "description": "BrainCache tab manager",
    "manifest_version": 2,
    "version": "0.1.0",
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": ["storage", "tabs", "chrome://favicon/"]
}
